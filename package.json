{
  "name": "backend-test",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "test": "jest --verbose --setupFiles dotenv/config",
    "test-coverage": "jest --coverage --setupFiles dotenv/config",
    "start-server": "node dist/app.js",
    "build": "rm -rf dist && npx tsc && cp .env dist/.env",
    "dev": "NODE_ENV=development tsc-watch --onSuccess \"node ./dist/app.js\"",
    "watch-server": "npx nodemon --watch 'src/**/*' -e ts,tsx --exec 'npx ts-node' ./src/app.ts",
    "migration:generate": "npm run build && npx typeorm migration:generate -d dist/db/postgres.db.js",
    "migration:run": "npm run build && npx typeorm migration:run -d dist/db/postgres.db.js",
    "migration:revert": "npm run build && npx typeorm migration:revert -d dist/db/postgres.db.js",
    "format": "prettier --write ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.11.2",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.2",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jest-when": "^3.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/pg": "^8.10.2",
    "@types/winston": "^2.4.4",
    "jest": "^29.6.2",
    "jest-when": "^3.5.2",
    "ts-jest": "^29.1.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  },
  "jest": {
    "transform": {
      "^.+\\.(t)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!**/index.ts"
    ]
  }
}
